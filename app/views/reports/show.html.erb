<div class="container">
    <%# Report %>
    <%= render @report %>

    <div>
        <%# Edit Link %>
        <%= link_to "Edit this report", edit_report_path(@report) %> |
        <%# Return Link %>
        <%= link_to "Back to reports", reports_path %>

        <%# Destroy Button %>
        <%= button_to "Destroy this report", @report, method: :delete %>
    </div>
</div>

<div class="container">
    <%# Display all writings %>
    <% @writings.each do |writing| %>
        <%= render 'writings/writing', writing: writing %>
    <% end %>
</div>
