<%# Number of writing results %>
<h1 class="text-center"><%= pluralize(@writings.count, "Result") %></h1>

<%# Table of writings %>
<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
                <th><%= sort_link(@query, :body, "Writing") %></th>
                <th><%= sort_link(@query, :user_name, "User") %></th>
            </tr>
        </thead>

        <tbody>
            <% @writings.each do |writing| %>
                <tr>
                    <td><%= link_to writing.title, writing %></td>
                    <td><%= writing.body.truncate_words(25) %></td>
                    <td><%= link_to writing.user.name, writing.user %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
