<%# Number of user results %>
<h1 class="text-center"><%= pluralize(@users.count, "Result") %></h1>

<%# Table of writings %>
<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th><%= sort_link(@query, :name, "Name", default_order: :asc) %></th>
                <th><%= sort_link(@query, :email, "Email") %></th>
                <th><%= sort_link(@query, :name, "Name") %></th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= link_to user.name, user %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to user.name, user %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
