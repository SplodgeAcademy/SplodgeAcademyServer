<div class="container">
    <%# Writing %>
    <%= render @writing %>

    <div>
        <%# Edit writing %>
        <%= link_to "Edit this writing", edit_writing_path(@writing) %> |

        <%# Link to return to all writings %>
        <%= link_to "Back to writings", writings_path %>

        <%# Destroy writing button %>
        <%= button_to "Destroy this writing", @writing, method: :delete %>
    </div>
</div>


<div class="container">
    <%# Form for new Conversation %>
    <%= render "conversationform", writing: @writing, writing_conversation: @writing.writing_conversations.build, submit_label: "Reply" %>

    <%# Display all conversations %>
    <% @writing_conversations.each do |writing_conversation| %>
        <%= render 'conversation', writing: @writing, writing_conversation: writing_conversation %>
    <% end %>
</div>